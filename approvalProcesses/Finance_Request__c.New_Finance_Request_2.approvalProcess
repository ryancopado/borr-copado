        <label>Project Finance Approval</label>
        <name>Project_Finance_Approval</name>
    </approvalStep>
    <description>New Finance Request submitted and approved by Finance Team
Updated for required fields in entry criteria</description>
    <emailTemplate>Alerts/Finance_Request_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Finance_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>Recalled,New,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Finance_Request__c.Local_Property_Tax_Treatment__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Finance_Request__c.Lease_Payment__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Finance_Request__c.Lease_Escalator__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Finance_Request__c.Decommissioning_Amount_Estimate__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Finance_Request__c.Additional_Incentive_Description__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
