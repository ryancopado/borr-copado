		/* end: redesigned Mobile launchpad CSS */
		
        
        div.mobile_notification {
	        background: url('{!URLFOR($Resource.SmartOM, 'images/icon_flag.png')}') no-repeat scroll 9px 7px / 16px 16px #4e6b8d;
		    border-radius: 5px;
		    color: #ffffff;
		    display: block;
		    line-height: 10px;
		    margin-bottom: 10px;
		    padding: 10px 5px 10px 30px;
		    margin-top: 5px;
        }
        
        ul.list_small > li {
        	height: 32px !important;
        	/*display: inline-block !important;*/
        }

        /* REMOVES LAUNCHPAD MINIMUM WIDTH IN LIGHTNING */
        .launchpad_lightning_class .aloha_min_width{
            min-width: 0px !important;
        }

        .launchpad_lightning_class div#smartOM{
            width: 93%;
        }

        @media only screen and (min-width : 0px) and (max-width : 800px)  {     

            .launchpad_lightning_class div#smartOM {
                padding: 45px 7px 3px 10px;
            }  
        }

        <apex:outputText rendered="{! (isMobile == true)}">
            /* smartphones (portrait and landscape) ----------- */
            @media only screen and (min-width : 0px) and (max-width : 599px)  {
            
                .launchpad_lightning_class div#smartOM {
                    background-color: transparent;
                    border: 0px solid #CCC;
                    border-radius: 5px;
                    cursor: default;
                    float: none;
                    display:block;
                    margin: 0 auto;
                    width: 97%;
                    min-width:285px;
                    padding: 0px 2px 0px 0px;
                    position: relative;
                    margin-left: 0px;      
                }
            
            }
        </apex:outputText>

        .launchpad_lightning_class div#smartOM{ }

        @media only screen and (min-width : 0px) and (max-width : 650px)  {     

            .launchpad_lightning_class div#smartOM {
                width: 96%;
            }  
        }

        @media only screen and (min-width : 0px) and (max-width : 600px)  {     
            
            div.smartOMToolbarItem {
                margin-bottom: 5px;
            }
        }

        @media only screen and (max-width: 500px) and (min-width: 0px){
            .launchpad_lightning_class div#smartOM {
                width: 96%;
            }  
        }     

    </style>
        

