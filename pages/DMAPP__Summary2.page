        }

        div.smartOMToolbarItemLast {
            margin-right:0px;   
        }
        
        div.smartOMToolbarImage {        
            cursor: pointer;
            margin: 0 auto;
            padding: 13px 0px 50% 0px;
        }

        div.smartOMToolbarItem a {
            display: block;
            padding-bottom: 5%;
            border: 1px #D8DDE6 solid;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }

