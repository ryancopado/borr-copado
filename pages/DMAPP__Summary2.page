    <c:AltifyLogoTooltip /> 
    
<apex:outputPanel title="" rendered="{! opportunity.id != null}">
    <c:MobileRedirect smartOM="true" applyLightning="true"/>
    
    <style>        
        body, td {
            color: #222222;
            font-family: Arial,Helvetica,sans-serif;
        }
        
        body {
            font-family: 'Arial','Helvetica',sans-serif;
            font-size: 75%;
        }
        
        div#smartOM {
        	background-color: #FFF;
            border: 1px solid #CCC;
            border-radius: 8px;
            cursor: default;
            float: left;
            min-width: 815px;
            padding: 45px 2px 3px 10px;
            position: relative; 
            width: 69%;
            overflow: hidden;          
        }
        
        div#smartOMBranding {
            position:absolute;
            width:100%;
            display:block;
            left:0px;
            top:0px;
            border-radius:8px 8px 0px 0px;
