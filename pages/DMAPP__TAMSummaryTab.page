                    )
                    .dialog({
                        title       :   'Export Plan to Powerpoint'
                        , width     :   '500px',
                        close: closeDialog
                    });
                
            }
                    
            showDialog();
            deletefuturePPTX(anchorOppId)
            
            return {
            }
        }
        
